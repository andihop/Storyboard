    </RelativeLayout>

    <!--Stories-->
    <LinearLayout
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <!--Featured stories-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_featured_stories"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            
            <TextView
                android:text="Featured Stories"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--Recent stories-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_recent_stories"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:text="Recent Stories"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--Archive-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_story_archive"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:text="Archive"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_story_archive"
                android:drawableLeft="@drawable/ic_arrow_forward"
                android:layout_marginLeft="5dp"
                android:background="#FFF"
                android:layout_width="30dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>